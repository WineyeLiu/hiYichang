<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

    <context id="MySql" defaultModelType="flat">

        <plugin type="org.mybatis.generator.plugins.SerializablePlugin" />

        <jdbcConnection
                driverClass="com.mysql.jdbc.Driver"
                connectionURL="jdbc:mysql://192.168.5.130:3306/hiyichang"
                userId="root"
                password="root" />

        <javaModelGenerator targetPackage="com.hiyichang.infohub.entity" targetProject="src/main/java" />

        <sqlMapGenerator targetPackage="mapper"  targetProject="src/main/resources" />

        <javaClientGenerator targetPackage="com.hiyichang.infohub.mapper" targetProject="src/main/java" type="XMLMAPPER" />

        <table tableName="customer">
            <property name="modelOnly" value="false"/>
            <generatedKey column="id" sqlStatement="MySql"/>
        </table>

        <table tableName="order">
            <property name="modelOnly" value="false"/>
            <generatedKey column="id" sqlStatement="MySql"/>
        </table>

        <table tableName="employee">
            <property name="modelOnly" value="false"/>
            <generatedKey column="id" sqlStatement="MySql"/>
        </table>

        <table tableName="procedure_step">
            <property name="modelOnly" value="false"/>
            <generatedKey column="id" sqlStatement="MySql"/>
        </table>

    </context>

</generatorConfiguration>